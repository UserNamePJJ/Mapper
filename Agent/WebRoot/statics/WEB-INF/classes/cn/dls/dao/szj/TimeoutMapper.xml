<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dls.dao.szj.TimeoutMapper">
      <select id="getTimeoutlist" resultType="Timeout">
       SELECT * FROM `timeout` WHERE `userid`=#{userid}
      </select>
      <insert id="inserInfo" parameterType="Timeout">
      INSERT INTO `timeout` VALUES(NULL,#{userid},#{title},#{content},#{time})
      </insert>
      <select id="getinfoBytitle" resultType="Timeout">
       SELECT * FROM `timeout` WHERE `title`=#{title}
      </select>
      <delete id="deleteinfo" parameterType="int">
       DELETE FROM `timeout` WHERE `id`=#{id}
      </delete>
</mapper>
